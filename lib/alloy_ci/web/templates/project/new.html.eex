<div data-controller="repos" class="content">
  <div class="card">
    <div class="card-header">
      <strong>Add your repos to AlloyCI</strong>
    </div>
    <div class="card-block">
      <div class="row">
        <div class="col-sm-12">
          <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><%= icon("search") %></i></span>
              </div>
            <input data-action="keyup->repos#filter" data-target="repos.input" type="text" class="form-control" placeholder="Filter...">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="repos-container">
    <div class="super-center">
      <div class="row">
        <div class="col-6 offset-4">
          <h4>
            <%= icon("spinner", "fa-spin") %>
            Fetching your repositories...
          </h4>
        </div>
      </div>
    </div>
  </div>
  <script>window.userID = "<%= @current_user.id %>"</script>
</div>
